#: import NoTransition kivy.uix.screenmanager.NoTransition

<DrawerClickableItem@MDNavigationDrawerItem>
    white: '#ffffff'
    text_color: self.white
    selected_color: self.white

<Tab>

<VerticalBoxLayout@MDBoxLayout>
    orientation: 'vertical'
    padding: '10dp'

<CustomThreeLineRightIconListItem>
    row_id: ''
    tag_icon: ''
    comment: ''
    price: ''
    odometr: ''
    date: ''
    tag: ''
    on_press:
        app.root.show_item(self)
        app.root.current = 'delete_item_screen'

<MyRoot>:
    MDScreen:
        name: 'main_screen'
        MDNavigationLayout:
            MDScreenManager:
                MDScreen:
                    VerticalBoxLayout:
                        MDTopAppBar:
                            id: top_bar
                            title: root.return_settings_data('car_name')
                            elevation: 4
                            pos_hint: {'top': 1}
                            left_action_items: [['menu', lambda x: nav_drawer.set_state('open')]]
                        MDTabs:
                            indicator_color: 'white'
                            on_tab_switch: root.update_list()
                            Tab:
                                title: 'Tab1'
                                VerticalBoxLayout:
                                    MDTextField:
                                        id: set_odometr
                                        required: True
                                        hint_text: 'set odometr'
                                        input_filter: 'int'
                                        text: str(root.return_settings_data('current_odometr'))
                                    MDFillRoundFlatIconButton:
                                        text: 'Refresh'
                                        pos_hint: {'center_x': .5}
                                        on_press:
                                            root.set_settings_data('current_odometr', int(root.ids.set_odometr.text))
                                    MDLabel:
                                        text: 'Last change'
                                        size_hint_y: .1
                                    MDBoxLayout:
                                        #id: from_last_change_box
                                        orientation: 'vertical'
                                        size_hint_y: .1
                                        MDLabel:
                                            text: ''
                                        MDLabel:

                                    Widget:
                            Tab:
                                title: 'Tab2'
                                MDScrollView:
                                    MDList:
                                        id: container

                        MDBoxLayout:
                            padding: '10dp'
                            size_hint_y: .1
                            Widget:
                            MDFillRoundFlatIconButton:
                                text: 'GRM'
                                icon: 'car-cog'
                                on_press:
                                    root.current = 'add_item_screen'
                                    root.ids.tag_icon.icon = 'car-cog'
                                    root.ids.tag_label.text = self.text
                            MDFillRoundFlatIconButton:
                                text: 'TO'
                                icon: 'oil'
                                on_press:
                                    root.current = 'add_item_screen'
                                    root.ids.tag_icon.icon = 'oil'
                                    root.ids.tag_label.text = self.text
                            MDFillRoundFlatIconButton:
                                text: 'Note'
                                icon: 'note-plus-outline'
                                on_press:
                                    root.current = 'add_item_screen'
                                    root.ids.tag_icon.icon = 'note-text-outline'
                                    root.ids.tag_label.text = self.text

                            Widget:

            MDNavigationDrawer:
                id: nav_drawer
                radius: (0, 16, 16, 0)
                MDNavigationDrawerMenu:
                    MDNavigationDrawerHeader:
                        title: 'Header title'
                        text: 'Header text'
                        spacing: '4dp'
                        padding: '12dp', 0, 0, '56dp'
                    #MDNavigationDrawerLabel:
                    #    text: 'Settings'
                    DrawerClickableItem:
                        icon: 'cog'
                        text: 'Settings'
                        on_press:
                            nav_drawer.set_state('close')
                            root.current = 'settings_screen'
                            root.transition = NoTransition()
                            root.mybox_build()
                    DrawerClickableItem:
                        icon: 'tag'
                        text: 'Tags'
                        on_press:
                            nav_drawer.set_state('close')
                            root.current = 'tag_screen'
                            root.transition = NoTransition()
                    MDNavigationDrawerDivider:
                    MDNavigationDrawerLabel:
                        text: 'Labels'

    MDScreen:
        name: 'settings_screen'
        VerticalBoxLayout:
            MDTextField:
                id: change_car_name_tf
                required: True
                hint_text: 'Name of car'
                text: root.return_settings_data('car_name')
            MDLabel:
                text: 'What will tracking'
                size_hint_y: .1
            VerticalBoxLayout:
                id: mybox
                size_hint_y: .1
            Widget:
            MDFillRoundFlatButton:
                pos_hint: {'center_x': .5}
                text: 'Ok'
                on_press:
                    root.set_settings_data('car_name', root.ids.change_car_name_tf.text)
                    root.ids.top_bar.title = root.return_settings_data('car_name')
                on_release:
                    root.transition = NoTransition()
                    root.current = 'main_screen'
    MDScreen:
        name: 'add_item_screen'
        VerticalBoxLayout:
            MDIcon:
                id: tag_icon
            MDLabel:
                id: tag_label
                text: ''
                size_hint_y: .1
            MDTextField:
                id: comment
                required: True
                hint_text: 'Comments'
                multiline: True
            MDTextField:
                id: price
                required: True
                hint_text: 'Price'
                input_filter: 'int'
            MDTextField:
                id: odometr
                required: True
                hint_text: 'Odometr'
                input_filter: 'int'
            MDLabel:
                id: mydate
                text: ''
                size_hint_y: .15
            MDFillRoundFlatButton:
                pos_hint: {'center_x': .5}
                text: 'Set date'
                on_release:
                    root.show_date_picker()
            Widget:
            MDBoxLayout:
                Widget:
                MDFillRoundFlatButton:
                    text: 'Cancel'
                    on_press:
                        root.transition = NoTransition()
                        root.current = 'main_screen'
                MDFillRoundFlatButton:
                    text: 'Ok'
                    on_press:
                        root.set_settings_data(root.ids.tag_label.text, int(root.ids.odometr.text))
                        root.transition = NoTransition()
                        root.save_to_bd(root.ids.tag_icon.icon, root.ids.comment.text, root.ids.price.text, root.ids.odometr.text, root.ids.mydate.text, root.ids.tag_label.text)
                        root.update_list()
                Widget:

    MDScreen:
        name: 'tag_screen'
        VerticalBoxLayout:
            MDLabel:
                size_hint_y: .1
                text: 'Available tag'
            Widget:
            MDFillRoundFlatButton:
                pos_hint: {'center_x': .5}
                text: 'Ok'
                on_press:
                    root.transition = NoTransition()
                    root.current = 'main_screen'

    MDScreen:
        name: 'delete_item_screen'
        VerticalBoxLayout:
            MDIcon:
                id: for_del_sc_icon
            MDLabel:
                id: for_del_sc_tag_label
                rowid: ''
                text: ''
                size_hint_y: .1
            MDLabel:
                id: for_del_sc_text
                text: ''
                multiline: True
            Widget:
            MDBoxLayout:
                Widget:
                MDFillRoundFlatButton:
                    text: 'Delete'
                    md_bg_color: "red"
                    on_press:
                        root.delete_item(root.ids.for_del_sc_tag_label.rowid)
                        root.update_list()
                        root.transition = NoTransition()
                        root.current = 'main_screen'
                Widget:
                MDFillRoundFlatButton:
                    text: 'Back'
                    on_press:
                        root.transition = NoTransition()
                        root.current = 'main_screen'
                Widget: