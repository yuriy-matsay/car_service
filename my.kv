<DrawerClickableItem@MDNavigationDrawerItem>
    white: '#ffffff'
    text_color: self.white
    selected_color: self.white

<MyRoot>:
    MDScreen:
        name: 's1'
        MDNavigationLayout:
            MDScreenManager:
                MDScreen:
                    MDBoxLayout:
                        padding: '5dp'
                        orientation: 'vertical'
                        MDTopAppBar:
                            id: top_bar
                            title: root.return_settings_data('car_name')
                            elevation: 4
                            pos_hint: {'top': 1}
                            left_action_items: [['menu', lambda x: nav_drawer.set_state('open')]]
                        Widget:
                        MDFloatingActionButton:
                            pos_hint: {'center_x': .9}
                            icon: "note-plus-outline"
                            md_bg_color: app.theme_cls.primary_color
                            on_press: root.current = 's3'

            MDNavigationDrawer:
                id: nav_drawer
                radius: (0, 16, 16, 0)
                MDNavigationDrawerMenu:
                    MDNavigationDrawerHeader:
                        title: 'Header title'
                        text: 'Header text'
                        spacing: '4dp'
                        padding: '12dp', 0, 0, '56dp'
                    #MDNavigationDrawerLabel:
                    #    text: 'Settings'
                    DrawerClickableItem:
                        icon: 'cog'
                        text: 'Settings'
                        on_press:
                            nav_drawer.set_state('close')
                            root.current = 's2'
                    DrawerClickableItem:
                        icon: 'send'
                        text: 'Outbox'
                    MDNavigationDrawerDivider:
                    MDNavigationDrawerLabel:
                        text: 'Labels'

    MDScreen:
        name: 's2'
        MDBoxLayout:
            orientation: 'vertical'
            padding: '20dp'
            MDTextField:
                id: change_car_name_tf
                required: True
                hint_text: 'Name of car'
                text: root.return_settings_data('car_name')
            Widget:
            MDFillRoundFlatButton:
                pos_hint: {'center_x': .5}
                text: 'Ok'
                on_press:
                    root.set_settings_data({'car_name': root.ids.change_car_name_tf.text})
                    root.ids.top_bar.title = root.return_settings_data('car_name')
                on_release:
                    root.current = 's1'

    MDScreen:
        name: 's3'
        MDBoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            MDLabel:
                text: 'fill'
                size_hint_y: .1
            MDTextField:
                required: True
                hint_text: 'TEST'

            Widget:
            MDFillRoundFlatButton:
                pos_hint: {'center_x': .5}
                text: 'Ok'

